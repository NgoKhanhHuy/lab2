@using Demo_PRN231_SE1618.Models
@model List<Category>
<h1>List of Categories</h1>
<form method="post" action="@Url.Action("AddorUpdate", "Home")">
    <label for="cateId">Category ID:</label>
    <input type="text" id="cateid" name="CategoryId" />
    <label for="catename">Category Name:</label>
    <input type="text" id="catename" name="CategoryName" required />
<br />
    <button type="submit" name="buttonValue" value="1">Add Category</button>
    <button type="submit" name="buttonValue" value="2">Update Category</button>
</form>
<div class="menu">
    <div>
        <table>
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.CategoryId</td>
                        <td>@c.CategoryName</td>
                        <td><a href="@Url.Action("Delete", "Home", new { id = c.CategoryId })">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>